<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gospell.boss.dao.ICaspnnewemailDao">
	<sql id="idColumns">
   		<![CDATA[
   			id=#{id}
   		]]>
	</sql>
	<sql id="whereColumns">	
		<if test="queryemailtitle != null and queryemailtitle != ''">
			<![CDATA[
				and emailtitle like concat('%',#{queryemailtitle},'%')
			]]>
		</if>
		
		<if test="querydate != null and querydate != ''">
			<![CDATA[
				and addtime like concat(#{querydate},'%')
			]]>
		</if>
		<if test="queryversiontype != null and queryversiontype != ''">
			<![CDATA[
				and versiontype =#{queryversiontype}
			]]>
		</if>
		<if test="querynetid != null and querynetid != ''">
			<![CDATA[
				and netid =#{querynetid}
			]]>
		</if>
	</sql>
	
	<select id="findByList" parameterType="Caspnnewemail" resultType="Caspnnewemail">
		<![CDATA[
			select * from caspnnewemail 	
		]]>
		<trim prefix="where" prefixOverrides="and|or">
		  <include refid="whereColumns"/>
		</trim>
		<![CDATA[
		 	order by id desc limit #{pager_offset},#{pager_openset}
		]]>		
	</select>

	<select id="findByCount" parameterType="Caspnnewemail" resultType="Integer">
		<![CDATA[
			select count(1) from caspnnewemail 
		]]>
		<trim prefix="where" prefixOverrides="and|or">
		  <include refid="whereColumns"/>
		</trim>
	</select>
	
	<select id="queryByList" parameterType="Caspnnewemail" resultType="Caspnnewemail">
		<![CDATA[
			select * from caspnnewemail 
		]]>
		<trim prefix="where" prefixOverrides="and|or">
		  <include refid="whereColumns"/>
		</trim>
		<![CDATA[
		 	order by id asc
		]]>		
	</select> 
	
	<select id="findById" parameterType="Integer"  resultType="Caspnnewemail" >
		<![CDATA[
		 	select * from caspnnewemail
		]]>
		<where>
			<include refid="idColumns"/>
		</where>
	</select>
	
	<insert id="save" parameterType="Caspnnewemail">
		<![CDATA[
			insert into caspnnewemail (netid,cardid,conditioncontent,emailtype,addtime,emailtitle,emailcontent,expiredtime,versiontype,sendername,emailpriority,remark,stbno,addressingmode,conditioncount)
			   values (#{netid},#{cardid},#{conditioncontent},#{emailtype},#{addtime},#{emailtitle},#{emailcontent},#{expiredtime},#{versiontype},#{sendername},#{emailpriority},#{remark},#{stbno},#{addressingmode},#{conditioncount})				
		]]>	
		<selectKey resultType="int" keyProperty="id" order="AFTER">
			<![CDATA[
				 select LAST_INSERT_ID() 
			]]>
		</selectKey>
	</insert>
	
	<update id="update" parameterType="Caspnnewemail">
		<![CDATA[
			update caspnnewemail set netid=#{netid},cardid=#{cardid},conditioncontent=#{conditioncontent},emailtype=#{emailtype},addtime=#{addtime},emailtitle=#{emailtitle},
			    emailcontent=#{emailcontent},expiredtime=#{expiredtime},versiontype=#{versiontype},sendername=#{sendername},emailpriority=#{emailpriority},remark=#{remark},stbno=#{stbno},addressingmode=#{addressingmode},conditioncount=#{conditioncount}
		]]>	
		<where>
			<include refid="idColumns"/>
		</where>
	</update>
	
	<delete id="delete" parameterType="Integer">
		<![CDATA[
			delete from caspnnewemail where id=#{id}
		]]>		
	</delete>
	
</mapper>
